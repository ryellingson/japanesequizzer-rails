<div class="sidebar-right hidden lg:block" data-controller='navbar' data-navbar-target='nav'>
  <div class="flex justify-start sm:hidden" >
    <i class="fas fa-arrow-left" data-action="click->navbar#showMenu"></i>
  </div>
  <div class="sidebar-right-media">
    <div class="chat-lesson">
      <% if @language.video_url %>
        <iframe width="475"
          height="300"
          src="<%= @language.video_url %>"
          frameborder="0"
          allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
        </iframe>
      <% end %>
    </div>
    <div class="chat-entertainment slideshow"
      data-controller="slideshow"
      data-slideshow-target="settings"
      data-slide-urls="<%= @slide_urls.to_json %>"
      data-fade-duration=2000
      data-slide-duration=15000>
      <%= image_tag @slide_urls.first, data: {slideshow_target: "bottomImage"} if @slide_urls %>
      <!-- not using image_tag helper because it leaves a broken image icon for first image -->
      <img class="opacity-0 fade-out" data-slideshow-target="topImage">
    </div>
  </div>
</div>
