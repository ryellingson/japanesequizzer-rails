<div class="plays-card">
  <div class="plays-card-title">
    <h2><%= play.game.name %> <p class='plays-card-language'>(<%= play.game.language.name %>)</p></h2>
  </div>
  <div class="plays-card-content">
    <p>- Score: <%= play.score %></p>
    <p>- Time: <%= play.time %></p>
    <% if play.perfect_score.positive? %>
      <p>- Count: <%= play.count %>/<%= play.perfect_score %></p>
    <% end %>
    <p class='plays-card-timestamp'><%= play.created_at.strftime("%d %b %Y, %H:%M") %></p>
  </div>
</div>
