<div class="password-reset-main-container">
  <div class="password-reset-sidebar-left"></div>

  <div class="password-reset-content-wrapper">
    <h2 class="text-3xl text-center border-b w-full mb-2">Change your password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), builder: MyFormBuilder, html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.password_section :password, "New Password" %>
    <%= f.password_section :password_confirmation, "Confirm New Password" %>

    <%= f.submit "Change my password", class: "btn btn-secondary" %>

    <% end %>
  </div>

  <div class="password-reset-sidebar-right"></div>
</div>
