var usernameError = "<%= raw @user.errors.full_messages_for(:username).first %>";
var emailError = "<%= raw @user.errors.full_messages_for(:email).first %>";

signUpForm = document.querySelector("#new_user");
usernameInput = signUpForm.querySelector("#user_username");
emailInput = signUpForm.querySelector("#user_email");

if (usernameError !== '') {
  usernameInput.setCustomValidity(usernameError);
  usernameInput.reportValidity();
}

if (emailError !== '') {
  emailInput.setCustomValidity(emailError);
  emailInput.reportValidity();
}
