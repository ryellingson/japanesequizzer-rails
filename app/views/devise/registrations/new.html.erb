<div class="edit-main-container">
  <div class="edit-sidebar-left"></div>
  <div class="edit-content-wrapper">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="edit-form-label eflw-d">
        <%= f.label :username %>
      </div>
      <div class="border bg-white shadow-md rounded px-2 pt-6 pb-5 mb-2 mx-5">
        <%= f.input :username,
        required: true,
        autofocus: true,
        min: 3,
        max: 16,
        input_html: { autocomplete: "username" } %>
      </div>
      <div class="edit-form-label eflw-d">
        <%= f.label :email %>
      </div>
      <div class="border bg-white shadow-md rounded px-2 pt-6 pb-5 mb-2 mx-5">
        <%= f.input :email,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
      </div>
      <div class="edit-form-label eflw-d">
        <%= f.label :password %>
      </div>
      <div class="border bg-white shadow-md rounded px-2 pt-6 pb-5 mb-2 mx-5">
        <%= f.input :password,
        required: true,
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
        input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="edit-form-label eflw-d">
        <%= f.label :password_confirmation %>
      </div>
      <div class="border bg-white shadow-md rounded px-2 pt-6 pb-5 mb-2 mx-5">
        <%= f.input :password_confirmation,
        required: true,
        input_html: { autocomplete: "new-password" } %>
      </div>
    </div>
    <div class="form-actions flex justify-center">
      <%= f.button :submit, "Sign up", class: "play-button border-glow mx-auto" %>
      <% end %>
    </div>
    <div class="form-actions flex justify-center">
      <%= link_to new_user_session_path do %>
        <div class="password-reset-button flex justify-center items-center text-xl">
          Login
        </div>
      <% end %>
    </div>
    <div class="edit-sidebar-right"></div>
  </div>
