<div class="post-create-wrapper">
  <div class="post-create-header">
    Create a post
  </div>
  <%= render 'devise/shared/error_messages', resource: post %>
  <%= form_for (post), remote: true do |f| %>

  <%= f.text_field :language_id, value: @language.id, hidden: true %>

  <div class="post-create-title">
    <%= f.text_field :title, placeholder: "Title", class: "pct-form" %>
  </div>
  <div class="post-create-content">
    <%= f.rich_text_area :content, placeholder: "Text (optional)", class: "pcc-form" %>
  </div>
  <div class="post-create-submit-wrapper">
    <%= f.submit "Post", class: "post-button border-glow" %>
  </div>
  <% end %>
</div>
