<div class="tp-wrapper">
  <div class="tp-image">
  <% if post.content.embeds[0] %>
    <%= cl_image_tag post.content.embeds[0].key %>
  <% else %>
    <!-- add placeholder -->
  <% end %>
  </div>
  <div class="tp-info">
    <h3 class='tp-title'><%= post.title %></h3>
    <p class='tp-author'>Posted by: <%= post.user.username %> <%= time_ago_in_words(post.created_at) %> ago</p>
    <div class="post-toolbar">
      <span class="post-comment-icon">
        <img src="https://img.icons8.com/material-two-tone/24/000000/topic.png"/>
      </span>
      <span class="number-of-comments">
        <%= post.comments.size %> <p class='ml-1'>Comments</p>
      </span>
    </div>
  </div>
</div>
